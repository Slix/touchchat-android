<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.bytesec.touchchat" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.bytesec.touchchat.ChatListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.bytesec.touchchat.ChatDetailActivity"
            android:label="@string/title_chat_detail"
            android:parentActivityName="net.bytesec.touchchat.ChatListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ChatListActivity" />
        </activity>
    </application>

</manifest>
